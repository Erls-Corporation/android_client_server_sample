<?xml version="1.0" encoding="utf-8"?>

 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:background="@android:color/transparent">

     <TextView android:id="@+id/timelineDistanceGroup"
               android:layout_height="wrap_content"
               android:layout_width="fill_parent"
               android:textColor="#FFF" android:textSize="12dp"
               android:textStyle="bold"
               android:visibility="gone"
               android:background="#333"
               android:padding="5dp"/>
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:id="@+id/timelineMainContent"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <TextView android:id="@+id/timelineItemContent"
                   android:layout_height="wrap_content"
                   android:layout_width="fill_parent"
                   android:textColor="#000" android:textSize="14dp"
                   android:padding="3dp"
                   android:paddingBottom="4dp"
                   android:autoLink="all"/>

         <LinearLayout
                 android:padding="3dp"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">

                <TextView android:id="@+id/timelineItemUsername"
                          android:layout_height="wrap_content"  android:textColor="#888"
                          android:layout_width="wrap_content"
                          android:textSize="12dp"/>
                <TextView android:layout_height="wrap_content" android:textColor="#888"
                          android:layout_width="wrap_content"
                          android:text=" - "
                          android:textSize="12dp"/>
                <TextView android:id="@+id/timelineItemPostedAt"
                          android:layout_height="wrap_content"  android:textColor="#888"
                          android:layout_width="wrap_content"
                          android:textSize="12dp"/>
                 <TextView android:layout_height="wrap_content"
                          android:layout_width="wrap_content" android:textColor="#888"
                          android:text=" - "
                          android:textSize="12dp"/>
                 <TextView android:id="@+id/timelineItemDistance"
                          android:layout_height="wrap_content" android:textColor="#888"
                          android:layout_width="wrap_content"
                          android:textSize="12dp"/>
         </LinearLayout>
     </LinearLayout>

 </LinearLayout>
